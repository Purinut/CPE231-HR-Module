					config
				);
			})

		})
		

	</script>

	<script type="text/javascript">
		$(document).ready(function() {
			var url = "/api/get_staff_performance"

			$.getJSON(url, function(avg_perf_data){
				console.log(avg_perf_data);
				var obj = avg_perf_data;

				var data = {
				  labels: obj.department,
				  datasets: [{
					axis: 'y',
					label: 'last month staff\'s performance',
					data: obj.score,
					fill: false,
					backgroundColor: [
					  'rgba(255, 99, 132, 0.2)',
					  'rgba(255, 159, 64, 0.2)',
					  'rgba(255, 205, 86, 0.2)'
					],
					borderColor: [
					  'rgb(255, 99, 132)',
					  'rgb(255, 159, 64)',
					  'rgb(255, 205, 86)'
					],
					borderWidth: 1
				  }]
				};

				var config = {
				  type: 'line',
				  data: data,
				  options: {
					indexAxis: 'y',
					showLine: false,
					pointRadius: 5,
					scales: {
					  x: {
						beginAtZero: true,
						grid: {
							display: false
						}
					  },
					  y: {
						offset: true
					  }
					}
				  }
				};

				var pointChart = new Chart(
					document.getElementById('avgPerformance'),
					config
				);

				var pointChartMini = new Chart(
					document.getElementById('avgPerformanceMini'),
					config
				);
			})
		})

		
	</script>

