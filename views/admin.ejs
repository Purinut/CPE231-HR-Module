	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.2.0/chart.min.js"></script>
	<script>
		$(document).ready(function() {
			var url = "/api/get_top_performance";
			$.getJSON(url, function(top_data){
				console.log(top_data)
				for(var i=1; i <= top_data.id.length; i++){
					$('#performanceContentTable').append(`<tr> 
															<th scope="row">` + i + `</th>
															<td>` + top_data.id[i-1] + `</td>
															<td>` + top_data.name[i-1] + `</td>
															<td>` + top_data.dep[i-1] + `<br>` + top_data.pos[i-1] + `</td>
															<td>` + top_data.score[i-1] + `</td>
														</tr>`);
				}
				
			})
		})
	</script>

	<script type="text/javascript">

		$(document).ready(function() {
			var url = "/api/get_petition_amount";
			$.getJSON(url, function(petition_data){
				console.log(petition_data);
				var obj = petition_data;
				var data = {
				  labels: obj.labels,
				  datasets: [{
					label: 'Petition Amount',
					data: obj.amount,
					backgroundColor: [
					  'rgba(255, 99, 132, 0.2)',
					  'rgba(255, 159, 64, 0.2)',
					  'rgba(255, 205, 86, 0.2)',
					  'rgba(75, 192, 192, 0.2)',
					  'rgba(54, 162, 235, 0.2)'
					],
					borderColor: [
					  'rgb(255, 99, 132)',
					  'rgb(255, 159, 64)',
					  'rgb(255, 205, 86)',
					  'rgb(75, 192, 192)',
					  'rgb(54, 162, 235)'
					],
					borderWidth: 1
				  }]
				};

				var config = {
				  type: 'bar',
				  data: data,
				  options: {
					scales: {
					  y: {
						beginAtZero: true
					  }
					}
				  },
				};
				var barChart = new Chart(
					document.getElementById('petitionAmount'),
					config
				);

				var barChartMini = new Chart(
					document.getElementById('petitionAmountMini'),
					config
				);
			})
		});
	</script>

	<script type="text/javascript">
		$(document).ready(function(){
			var url = "/api/get_staff_proportion";

